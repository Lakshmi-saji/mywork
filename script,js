<script>
    document.getElementById('send-btn').addEventListener('click', function() {
        let message = document.getElementById('search-box').value;
        if (message.trim() !== '') {
            alert("Message sent: " + message);
            document.getElementById('search-box').value = ''; // Clear input after sending
        } else {
            alert("Please enter a message.");
        }
    });
</script>
